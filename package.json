    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "chai": "^4.2.0",
    "dotenv": "^16.0.0",
    "eslint": "^8.9.0",
    "ethereum-waffle": "^3.0.0",
    "ethers": "^5.0.0",
    "hardhat": "^2.5.0",
    "ts-node": "^10.4.0",
    "typechain": "^5.0.0",
    "typescript": "^4.5.5",
    "typescript-eslint-parser": "^22.0.0",
